<%if(typeof(errors)!="undefined"){%>
    <% for(var x in errors) {%>
        <div class="bg-primary text-white text-center d-flex align-items-center flex-column">
            <div class="container d-flex align-items-center flex-column" style="padding-top: 100px; position: absolute; z-index: 99;">
                <div class="alert alert-warning alert-dismissible fade show" role="alert" style="width: 500px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong><%= errors[x] %></strong> 
                </div>
                <script>
                    $(".alert").alert();
                </script>
            </div>
        </div>
    <%}%>
<%}%>